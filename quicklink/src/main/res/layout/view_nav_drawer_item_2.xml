<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:qlink="http://schemas.android.com/apk/res/com.deange.quicklink"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/background_card_selector" >

        <com.deange.quicklink.ui.misc.TextFontView
            android:id="@+id/item_nav_drawer_page_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingBottom="4dp"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="20sp"
            qlink:ql_fontName="Roboto-LightItalic.ttf" />

        <com.deange.quicklink.ui.misc.TextFontView
            android:id="@+id/item_nav_drawer_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:textColor="#777"
            android:textSize="12sp"
            qlink:ql_fontName="Roboto-Light.ttf" />

        <com.deange.quicklink.ui.misc.TextFontView
            android:id="@+id/item_nav_drawer_short_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_nav_drawer_page_title"
            android:textColor="#777"
            android:textSize="14sp"
            qlink:ql_fontName="Roboto-Light.ttf" />
    </RelativeLayout>

</FrameLayout>